.share

	// title

	.share__title
		h3
			| Как принять участие ?
		.share__title__hr

	// container

	.container

		.row

			// column

			.col-md-4
				
				// item

				.share__item

					.share__item__mask

						p
							| Отправь <span>заявку</span>

					.share__item__content

						p
							| Заявка на участие. <br/> Марафон стартует

						.share__item__content__date-day
							| 25
						.share__item__content__date-mounth
							| октября

					a.btn-yellow.call(href="#" title="")
						| Заявка

				// / item

			// column

			.col-md-4

				// item

				.share__item

					.share__item__mask

						p
							| Заполни <span>анкету</span>

					.share__item__content

						p
							| Личная анкета участника

						form.send-form(action="../mail.php" method="post")
							input(type="text" name="phone" pattern=".{11,}" placeholder="Телефон" required)
							input(type="text" name="email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$" placeholder="Почта" required)
							input(type="text" name="name" placeholder="Имя,фамилия" required)
							input(type="hidden" id="action" name="action" value="submitform")
							input.btn-yellow(type="submit" name="" value="Отправить")

				// / item

			// column

			.col-md-4

				// item

				.share__item

					.share__item__mask

						p
							| Оплати <span>участие</span>

					.share__item__content

						p
							| Стоимость участия при оплате <br/> до 15 октября

						.share__item__content__price
							| 1000p.
						
						p
							| 15-20 октября стоимость увеличивается на 500 рублей

					a.btn-buy(href="#" title="")

				// / item